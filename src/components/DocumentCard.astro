---
interface Props {
  id: string
  title: string
  preview: string
  time: string
}

const { id, title, preview, time } = Astro.props
---

<div class="doc-card-wrapper group relative" data-doc-id={id}>
  <a href={`/editor#${id}`} class="corner-accent doc-card">
    <span class="corner-accent-inner doc-card-inner">
      <h3 class="font-semibold text-foreground truncate mb-1">{title}</h3>
      <p class="text-xs text-muted-foreground line-clamp-2 mb-3">{preview}</p>
      <span class="text-xs text-muted-foreground/70">{time}</span>
    </span>
  </a>
  <button type="button" class="doc-delete" aria-label="Delete">
    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg>
  </button>
</div>
