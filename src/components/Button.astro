---
interface Props {
  href?: string
  type?: "button" | "submit" | "reset"
  class?: string
  size?: "sm" | "md" | "lg"
  id?: string
}

const { href, type = "button", class: className = "", size = "md", id, ...rest } = Astro.props

const Tag = href ? "a" : "button"

const sizeClasses = {
  sm: "px-3 py-1.5 text-xs gap-1.5",
  md: "px-4 py-2 text-sm gap-2",
  lg: "px-5 py-2.5 text-sm gap-2",
}
---

<Tag
  {...href ? { href } : { type }}
  {...id ? { id } : {}}
  class:list={["corner-accent inline-flex font-semibold text-foreground no-underline cursor-pointer outline-none", className]}
  {...rest}
>
  <span class:list={["corner-accent-inner inline-flex items-center whitespace-nowrap", sizeClasses[size]]}>
    <slot />
  </span>
</Tag>
