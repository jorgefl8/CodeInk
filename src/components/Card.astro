---
interface Props {
  href: string
  title: string
  description: string
  class?: string
}

const { href, title, description, class: className = "" } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    "corner-accent flex cursor-pointer flex-col p-0 text-foreground no-underline outline-none",
    "[&_.card-inner]:block [&_.card-inner]:flex-1 [&_.card-inner]:px-7 [&_.card-inner]:py-8",
    "[&_.card-icon]:mb-5 [&_.card-icon]:flex [&_.card-icon]:h-10 [&_.card-icon]:w-10 [&_.card-icon]:items-center [&_.card-icon]:justify-center [&_.card-icon]:rounded-[var(--radius)] [&_.card-icon]:border [&_.card-icon]:border-border [&_.card-icon]:bg-primary/10 [&_.card-icon]:text-primary",
    "[&_.card-icon_svg]:h-5 [&_.card-icon_svg]:w-5",
    "[&.card-compact_.card-inner]:px-6 [&.card-compact_.card-inner]:py-5 [&.card-compact_.card-icon]:mb-3.5 [&.card-compact_.card-icon]:h-[34px] [&.card-compact_.card-icon]:w-[34px] [&.card-compact_.card-icon_svg]:h-[17px] [&.card-compact_.card-icon_svg]:w-[17px]",
    className,
  ]}
>
  <span class="corner-accent-inner card-inner">
    <div class="card-icon">
      <slot name="icon" />
    </div>
    <h3 class="text-base font-semibold mb-1.5">{title}</h3>
    <p class="text-sm text-muted-foreground leading-relaxed font-mono">{description}</p>
  </span>
</a>
