---
import Logo from "@/assets/logo.svg"

interface Props {
  logoHref?: string
}

const { logoHref = "/?home" } = Astro.props
---

<nav class="site-header sticky top-0 z-50 grid grid-cols-[auto_1fr_auto] items-center px-6 py-3 border-b border-border/50" style="background: rgba(23, 23, 23, 0.12); backdrop-filter: blur(12px) saturate(1.3); -webkit-backdrop-filter: blur(12px) saturate(1.3); box-shadow: 0 0 0 1px rgba(245, 158, 11, 0.05), 0 4px 24px rgba(0, 0, 0, 0.4), 0 0 48px rgba(245, 158, 11, 0.04);">
  <div class="flex items-center gap-3">
    <a href={logoHref} class="flex items-center gap-2.5 hover:opacity-80 transition-opacity">
      <Logo class="w-7 h-7" aria-hidden="true" transition:name="logo" />
      <span class="text-lg font-bold tracking-tight" transition:name="brand">CodeInk</span>
    </a>
    <slot name="left" />
  </div>

  <div class="flex items-center justify-center">
    <slot name="center" />
  </div>

  <div class="flex items-center justify-end gap-3">
    <slot />
    <a href="https://github.com/jorgefl8/CodeInk" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="inline-flex items-center justify-center p-2 rounded-lg text-primary hover:bg-primary/10 transition-colors">
