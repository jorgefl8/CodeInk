---
const viewBtnClass = "inline-flex items-center justify-center gap-[5px] rounded-[var(--radius)] px-[10px] py-[5px] text-[11px] font-medium text-muted-foreground cursor-pointer whitespace-nowrap transition-all duration-200 border-0 bg-transparent relative hover:text-foreground hover:bg-[rgba(255,255,255,0.04)] [&.active]:text-primary [&.active]:bg-primary/10 [&.active]:shadow-[0_0_12px_rgba(245,158,11,0.15)]"
---

<div class="flex items-center gap-2">
  <div class="flex items-center rounded-lg bg-muted/30 p-0.5 gap-0.5">
    <button id="view-editor" type="button" class={viewBtnClass} aria-label="Editor only">
      <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
      <span class="hidden sm:inline">Editor</span>
    </button>
    <button id="view-split" type="button" class:list={[viewBtnClass, "hidden sm:inline-flex"]} aria-label="Split view">
      <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M12 3v18"/></svg>
      Split
    </button>
    <button id="view-preview" type="button" class={viewBtnClass} aria-label="Preview only">
      <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/></svg>
      <span class="hidden sm:inline">Preview</span>
    </button>
  </div>
  <button id="export-md" type="button" class={viewBtnClass} aria-label="Export as Markdown" title="Export as Markdown">
    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
    <span class="hidden sm:inline">MD</span>
  </button>
</div>
