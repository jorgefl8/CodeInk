---
import "@/styles/global.css"
import { ClientRouter } from "astro:transitions"

interface Props {
  title: string
  description?: string
  bodyClass?: string
}

const {
  title,
  description = "CodeInk is a free online Markdown editor. 100% client-side, no account needed. Real-time preview with syntax highlighting, Mermaid diagrams, and KaTeX math support.",
  bodyClass = "h-dvh overflow-hidden",
} = Astro.props

const siteURL = "https://codeink.app"
const canonicalURL = new URL(Astro.url.pathname, siteURL).href
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="google-site-verification" content="0hb4M721vGuZTd59TPpHg_F26uKPsCyBILsWls5Ut04" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon-512.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteURL}/og-image.png`} />
    <meta property="og:site_name" content="CodeInk" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteURL}/og-image.png`} />
    <meta name="twitter:domain" content="codeink.app" />

    <!-- Sitemap discovery -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "CodeInk",
      "url": "https://codeink.app",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Web Browser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": "Free online Markdown editor with real-time preview, Mermaid diagrams, KaTeX math, and syntax highlighting. 100% client-side, no account required.",
      "screenshot": "https://codeink.app/og-image.png",
      "softwareVersion": "1.0",
      "author": {
        "@type": "Person",
        "name": "Jorge"
      }
    })} />

    <ClientRouter />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class:list={["antialiased grid-bg", bodyClass]}>
    <slot />
  </body>
</html>

