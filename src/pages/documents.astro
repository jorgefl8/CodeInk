---
import Layout from "@/layouts/Layout.astro"
import Header from "@/components/Header.astro"
import Button from "@/components/Button.astro"
import Logo from "@/assets/logo.svg"
---

<Layout title="CodeInk â€” Documents">
  <div id="documents-root" class="h-screen overflow-auto">
    <Header>
      <Button href="/editor#new" size="md">
        New document
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14"/><path d="M5 12h14"/></svg>
      </Button>
    </Header>

    <main class="max-w-6xl mx-auto px-6 py-12">
      <div id="doc-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      </div>

      <div id="empty-state" class="hidden flex-col items-center justify-center py-24 text-center">
        <div class="w-20 h-20 mb-6 flex items-center justify-center rounded-2xl bg-primary/10">
          <Logo class="w-10 h-10" aria-hidden="true" />
        </div>
        <h2 class="text-xl font-semibold mb-2">No documents yet</h2>
        <p class="text-muted-foreground text-sm mb-6 max-w-sm">Create your first markdown document to get started.</p>
        <Button href="/editor#new" size="md">
          Create your first document
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m12 5 7 7-7 7"/></svg>
        </Button>
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  .doc-card {
    display: block;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: background 0.2s ease, box-shadow 0.3s ease;
  }

  .doc-card:hover {
    box-shadow: 0 0 0 1px rgba(245, 158, 11, 0.15), 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .doc-card-inner {
    display: block;
    padding: 1.5rem;
  }

  .doc-delete {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    padding: 0.375rem;
    border-radius: 0.5rem;
    border: none;
    background: transparent;
    opacity: 0;
    color: var(--muted-foreground);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .doc-card-wrapper:hover .doc-delete {
    opacity: 1;
  }

  .doc-delete:hover {
    color: var(--error);
    background: rgba(239, 68, 68, 0.1);
  }
</style>

<script>
  import { initDocuments } from "@/scripts/documents"
  document.addEventListener("astro:page-load", () => initDocuments())
</script>
